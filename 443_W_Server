####  AZURE ARM template (.yaml) for, provisioning & hardening a windows 2019 web server that exclusively, ONLY Requires port "443" HTTPS Protocol. ######


resources:
  - type: Microsoft.Compute/virtualMachines
    apiVersion: '2019-07-01'
    name: 'WebServerVM'
    location: '[resourceGroup().location]'
    properties:
      hardwareProfile:
        vmSize: 'Standard_D2_v2'
      storageProfile:
        imageReference:
          publisher: 'MicrosoftWindowsServer'
          offer: 'WindowsServer'
          sku: '2019-Datacenter'
          version: 'latest'
      osProfile:
        computerName: 'WebServerVM'
        adminUsername: 'azureuser'
        adminPassword: '[parameters('adminPassword')]'
      networkProfile:
        networkInterfaces:
          - id: '[resourceId('Microsoft.Network/networkInterfaces', 'webServerNic')]'
  - type: Microsoft.Network/networkInterfaces
    apiVersion: '2019-07-01'
    name: 'webServerNic'
    location: '[resourceGroup().location]'
    properties:
      ipConfigurations:
        - name: 'ipconfig1'
          properties:
            privateIPAllocationMethod: 'Dynamic'
            subnet:
              id: '[resourceId('Microsoft.Network/virtualNetworks/subnets', 'VirtualNetwork', 'default')]'
      networkSecurityGroup:
        id: '[resourceId('Microsoft.Network/networkSecurityGroups', 'webServerNsg')]'
  - type: Microsoft.Network/networkSecurityGroups
    apiVersion: '2019-07-01'
    name: 'webServerNsg'
    location: '[resourceGroup().location]'
    properties:
      securityRules:
        - name: 'AllowHttpsInbound'
          properties:
            protocol: 'Tcp'
            sourcePortRange: '*'
            destinationPortRange: '443'
            sourceAddressPrefix: '*'
            destinationAddressPrefix: '*'
            access: 'Allow'
            priority: 100
            direction: 'Inbound'
